# IVOIRE.AI - Configuration Apache pour meilleur référencement

# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Forcer HTTPS et www en une seule étape
    # Rediriger ivoire.ai (sans www) vers www.ivoire.ai avec HTTPS
    RewriteCond %{HTTP_HOST} ^ivoire\.ai$ [NC]
    RewriteRule ^(.*)$ https://www.ivoire.ai/$1 [L,R=301]
    
    # Forcer HTTPS pour www.ivoire.ai si pas déjà en HTTPS
    RewriteCond %{HTTPS} off
    RewriteCond %{HTTP_HOST} ^www\.ivoire\.ai$ [NC]
    RewriteRule ^(.*)$ https://www.ivoire.ai/$1 [L,R=301]

    # Rediriger index.html vers la racine
    RewriteCond %{THE_REQUEST} /index\.html[\s?] [NC]
    RewriteRule ^index\.html$ / [R=301,L]

    # Ajouter un slash final si absent (sauf pour les fichiers)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} !(.*)/$
    RewriteRule ^(.*)$ https://www.ivoire.ai/$1/ [L,R=301]
</IfModule>

# S'assurer que le sitemap.xml est accessible avec le bon Content-Type
<IfModule mod_mime.c>
    AddType application/xml .xml
</IfModule>

# Compression GZIP pour améliorer les performances
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Cache des fichiers statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Headers de sécurité
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# S'assurer que sitemap.xml et robots.txt sont accessibles
<FilesMatch "^(sitemap\.xml|robots\.txt)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Empêcher l'accès aux fichiers sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Page d'erreur personnalisée (optionnel)
ErrorDocument 404 /index.html

